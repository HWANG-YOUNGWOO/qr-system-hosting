{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../lib",
    "rootDir": "src",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
